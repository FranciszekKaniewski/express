extends layout

block content
  h1= title
  if show
    form(method="post") 
      p Jaka jest towja ulubiona pora roku 
      ul 
        each item in data 
          li  
            label=item.title 
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value="Zagłosuj")
  else
    h1 Już zagłosowałeś!
    p Wyniki
    ul
      each item in data
        li #{item.title} #{item.vote} głosy = (#{Math.round(item.vote/sum*100)}%)
    p Głosów oddano : #{sum}
      
